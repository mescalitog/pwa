{
  "name": "itstuff-minimal-node-express-pwa",
  "version": "1.0.0",
  "description": "Demo minima de una pwa en node y express",
  "scripts": {
    "ng": "ng",
    "client-start": "ng serve",
    "client-build": "ng build",
    "client-test": "ng test",
    "client-lint": "ng lint",
    "client-e2e": "ng e2e",
    "start": "npm run serve",
    "build": "npm run server-build-ts && npm run server-tslint && npm run copy-static-assets && ng build",
    "build-prod": "npm run server-build-ts && npm run server-tslint && npm run copy-static-assets && ng build --prod --aot=true",    
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "server-build-ts": "tsc -p ./server",
    "server-watch-ts": "tsc -w -p ./server",
    "server-tslint": "tslint -c ./server/tslint.json -p ./server/tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts"
  },
  "author": "Jos√© Marfil jose.marfil@itstuff.com.ar",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/pwa": "^0.6.8",
    "@angular/router": "^6.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.5.4",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "rxjs": "^6.0.0",
    "winston": "^3.0.0",
    "zone.js": "^0.8.26",
    "@angular/service-worker": "^6.0.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@types/compression": "0.0.36",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.38",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
